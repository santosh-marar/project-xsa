enum Gender {
  MALE
  FEMALE
  UNISEX
}

enum AgeRange {
  INFANT
  TODDLER
  KIDS
  TEENS
  ADULTS
  SENIORS
}

model TShirtAttributes {
  id          String   @id @default(ulid())
  productVariation   ProductVariation @relation(fields: [productVariationId], references: [id], onDelete: Cascade)
  productVariationId String   @unique
  brand       String?
  modelNumber String?
  warranty    String?
  size        String
  color       String
  sleeveType  String   // "Long" | "Short" | "3/4"
  collarType    String   // "Round" | "V-Neck" | "Polo"
  fit         String   // "Regular" | "Slim" | "Oversized"
  material      String   // "Cotton" | "Polyester" | "Linen"
  fabricWeight String?  // "Light" (150gsm) | "Medium" (180gsm) | "Heavy" (220gsm)
  careInstructions String?
  stretchability String? // "Non-stretch" | "2-way" | "4-way"
  pattern     String?  // "Solid" | "Striped" | "Printed"
  gender      Gender   @default(UNISEX)
  ageRange    AgeRange

  @@index([productVariationId, brand, size, color, sleeveType, collarType, fit,material,  gender, ageRange])
}

model PantAttributes {
  id          String   @id @default(ulid())
  productVariation   ProductVariation @relation(fields: [productVariationId], references: [id], onDelete: Cascade)
  productVariationId String   @unique
  brand       String?
  modelNumber String?
  warranty    String?
  size        String
  color       String
  material    String    // "Denim" | "Cotton" | "Polyester Blend"
  waistType   String    // "Low" (8") | "Mid" (10") | "High" (12") 
  stretchType String    // "Rigid" | "1% Stretch" | "Super Stretch"
  washType    String    // "Dark Wash" | "Medium Wash" | "Distressed"
  legStyle    String    // "Skinny" | "Slim" | "Straight" | "Wide"
  pantType    String    // "Full Pant" | "Half Pant" | "Low-Cut"
  inseam      Int?      // In inches (28, 30, 32)
